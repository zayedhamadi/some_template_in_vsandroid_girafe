<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TableRow>
        <TextView
                android:id="@+id/textViewPoids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poids :"
                android:padding="8dp" />

        <EditText
                android:id="@+id/editTextPoids"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Poids"
                android:padding="8dp" />
    </TableRow>


    <TableRow>
        <TextView
                android:id="@+id/textViewTaille"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taille :"
                android:padding="8dp" />

        <EditText
                android:id="@+id/editTextTaille"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Taille"
                android:padding="8dp" />
    </TableRow>


    <TableRow>
        <RadioButton
                android:id="@+id/radioButtonMetre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Métre"
                android:padding="8dp" />

        <RadioButton
                android:id="@+id/radioButtonCentimetre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Centimétre"
                android:padding="8dp" />
    </TableRow>


    <TableRow>
        <Button
                android:id="@+id/buttonCalculerIMC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculer L'IMC"
                android:padding="8dp" />

        <Button
                android:id="@+id/buttonRAZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RAZ"
                android:padding="8dp" />
    </TableRow>


    <TableRow>
        <TextView
                android:id="@+id/textViewResultatLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Résultat:"
                android:padding="8dp" />

        <TextView
                android:id="@+id/textViewResultat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Vous devez cliquer sur le bouton <Calculer L'IMC> pour obtenir un résultat."
                android:padding="8dp" />
    </TableRow>
</TableLayout>